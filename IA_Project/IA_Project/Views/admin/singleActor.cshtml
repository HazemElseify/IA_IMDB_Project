    <link href="../Properties/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="../Properties/css/contactstyle.css" type="text/css" media="all" />
    <link rel="stylesheet" href="../Properties/css/faqstyle.css" type="text/css" media="all" />
    <link href="../Properties/css/single.css" rel='stylesheet' type='text/css' />
    <link href="../Properties/css/medile.css" rel='stylesheet' type='text/css' />
    <!-- banner-slider -->
    <link href="../Properties/css/jquery.slidey.min.css" rel="stylesheet">
    <!-- //banner-slider -->
    <!-- pop-up -->
    <link href="../Properties/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
